@model ACSITPortal.Entities.Thread

@{
    ViewData["Title"] = "Create Thread";
}

<h1>Create Thread</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateThread" asp-controller="Users">
            <input type="hidden" asp-for="PostId" value="@Model.PostId" class="form-control" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ThreadContent" class="control-label"></label>
                <input asp-for="ThreadContent" class="form-control" />
                <span asp-validation-for="ThreadContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ViewPost">Back home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
