@model SignupViewModel

<form method="post" asp-action="Signup" asp-controller="Users">
    <div class="form-group">
        <label class="form-label">User login</label>
        <input class="form-control" asp-for="UserLogin" />
        <span class="text-danger" asp-validation-for="UserLogin"></span>
    </div>

    <div class="form-group">
        <label class="form-label">Phone Number</label>
        <input type="number" class="form-control" asp-for="Phone" />
        <span class="text-danger" asp-validation-for="Phone"></span>
    </div>

    <div class="form-group">
        <label>Password</label>
        <input type="password" class="form-control" asp-for="UserPassword" />
        <span class="text-danger" asp-validation-for="UserPassword"></span>
    </div>

    <div class="form-group">
        <label>Confirm password</label>
        <input type="password" class="form-control" asp-for="ConfirmPassword" />
        <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <a class="btn btn-danger" asp-action="Index" asp-controller="Home">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}