@model SignupViewModel

<form method="post" asp-action="Login" asp-controller="Users">
    <div class="form-group">
        <label class="form-label">User login</label>
        <input class="form-control" asp-for="UserLogin" />
        <span class="text-danger" asp-validation-for="UserLogin"></span>
    </div>

    <div class="form-group">
        <label>Password</label>
        <input class="form-control" asp-for="UserPassword" />
        <span class="text-danger" asp-validation-for="UserPassword"></span>
    </div>

    <div class="form-group">
        <label>Confirm password</label>
        <input class="form-control" asp-for="ConfirmPassword" />
        <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}