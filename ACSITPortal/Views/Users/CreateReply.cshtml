@model ACSITPortal.Entities.Reply

@{
    ViewData["Title"] = "Create Thread";
}

<h1>Create Thread</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateReply" method="post">
            <input type="hidden" asp-for="ThreadId" value="@Model.ThreadId" class="form-control" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ReplyContent" class="control-label"></label>
                <input asp-for="ReplyContent" class="form-control" />
                <span asp-validation-for="ReplyContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ViewPost">Back home</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
