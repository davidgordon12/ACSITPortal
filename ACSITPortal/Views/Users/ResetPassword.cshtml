@model ResetPasswordViewModel

<h2>Reset your password</h2>
<form asp-action="ResetPassword" method="post">
    <span class="text-danger">@ViewBag.ErrMessage</span>
    <div class="form-group">
        <label class="form-label">Token <p class="text-muted">(Received in email)</p></label>
        <input asp-for="Token" class="form-control" placeholder="Paste here..." />
        <span class="text-danger" asp-validation-for="Token"></span>
    </div>
    <div class="form-group">
        <label class="form-label">New Password</label>
        <input class="form-control" type="password"  asp-for="NewPassword"/>
        <span class="text-danger" asp-validation-for="NewPassword"></span>
    </div>
    <div class="form-group mb-3">
        <label class="form-label">Confirm Password</label>
        <input class="form-control" type="password" asp-for="ConfirmPassword" />
        <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
    </div>
    <button type="submit" class="btn text-white btn-acsit">Reset</button>
    <a class="btn btn-danger" asp-action="Index" asp-controller="Home">Cancel</a>
</form>